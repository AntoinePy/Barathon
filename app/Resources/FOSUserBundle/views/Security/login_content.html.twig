{% trans_default_domain 'FOSUserBundle' %}
<form action="{{ path("fos_user_security_check") }}" method="post">
{% if csrf_token %}
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
{% endif %}
{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
{% else %}
    <div class="col-md-6 col-lg-offset-3" style="background-color: rgb(232, 119, 20); border-radius: 5px">
        <div class="signup-header wow fadeInUp">
            <h3 class="form-title text-center">Inscription</h3>
            {% if error %}
                <div>
                    <h3 style="color: darkred">{{ error.messageKey|trans(error.messageData, 'security') }}</h3>
                </div>
            {% endif %}
            <form class="form-header" action="http://moxdesign.us10.list-manage.com/subscribe/post" role="form" method="POST" id="#">
                <input type="hidden" name="u" value="503bdae81fde8612ff4944435">
                <input type="hidden" name="id" value="bfdba52708">
                <div class="form-group">
                    <input class="form-control input-lg" name="_username" id="username" type="text" placeholder="Votre pseudo" value="{{ last_username }}"required="required">
                </div>
                <div class="form-group">
                    <input class="form-control input-lg" name="_password" id="password" type="password" placeholder="adresse mail" required="required">
                </div>
                <div class="form-group last">
                    <input type="submit" class="btn btn-warning btn-block btn-lg" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                </div>
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                {#<p class="privacy text-center">Nous ne partagerons pas votre adresse e-mail, pour plus d'infomations, lisez notre <a href="privacy.html">politique de confidentialit√©</a>.</p>#}
            </form>
        </div>
    </div>
{% endif %}
</form>
